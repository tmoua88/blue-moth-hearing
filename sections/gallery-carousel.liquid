{{ 'section-gallery-carousel.css' | asset_url | stylesheet_tag }}
<script src='{{ 'gallery-carousel.js' | asset_url }}' defer='defer'></script>

{% liquid
	assign slideshow_speed = section.settings.slideshow_speed
%}

{%- style -%}
	{% render 'section-margin' %}
{%- endstyle -%}

<div
	class='gallery-carousel'
	data-speed='{{ slideshow_speed }}'
>
	<div class='container'>
		{% render 'section-header',
			section_heading: section.settings.section_heading,
			section_subheading: section.settings.subheading,
			section_heading_size: section.settings.section_heading_size,
			section_heading_tag: section.settings.section_heading_tag,
			dot: section.settings.dot,
			line: section.settings.line
		%}
	</div>
	<div class='gallery-carousel__swiper swiper-container'>
		<div class='gallery-carousel__slide_wrapper swiper-wrapper'>
			{% for block in section.blocks %}
				<div class='gallery-carousel__slide swiper-slide'>
					<div
						class='gallery-carousel__slide_img {% if section.settings.image_ratio == 'auto' %}adapt{% endif %}' style="aspect-ratio: {{ section.settings.image_ratio }};"
					>
						{%- if block.settings.slide_img != blank -%}
							{%- assign widths = '360, 535, 720, 940, 1070, 1200, 1500, 1780, 2000, 2400, 2800, 3200' -%}
							{%- capture sizes -%}
						(min-width: 1100px) calc((100vw - 128px)), calc((100vw - 40px))
					{%- endcapture -%}
							{{
								block.settings.slide_img
								| image_url: width: block.settings.slide_img.width
								| image_tag: loading: 'lazy', sizes: sizes, widths: widths
							}}
						{%- else -%}
							{% assign index = forloop.index | modulo: 3 | plus: 1 %}
							{{
								'hero-apparel-'
								| append: index
								| placeholder_svg_tag: 'placeholder-svg'
							}}
						{%- endif -%}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	{% if section.settings.stop_btn %}
		<div class='container'>
			<div class='gallery-carousel_stop'>
				{% render 'icon-play' %}
				{% render 'icon-stop' %}
			</div>
		</div>
	{% endif %}
</div>

