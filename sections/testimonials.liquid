{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}
<script src='{{ 'testimonials.js' | asset_url }}' defer='defer'></script>

{% liquid
	assign autoplay = section.settings.is_autoplay
	assign stop_autoplay = section.settings.is_hover_stop_autoplay
	assign slideshow_speed = section.settings.slideshow_speed
	assign slideshow_delay = section.settings.slideshow_delay
	assign block_count = section.blocks.size
%}

{%- style -%}
	{% render 'section-margin' %}

	.start-spin {

		transition: all {{ slideshow_delay}}s linear !important;
	}
{%- endstyle -%}

<div
	class='testimonials'
	data-id='shopify-section-{{ section.id }}'
	data-autoplay='{{ autoplay }}'
	data-stop-autoplay='{{ stop_autoplay }}'
	data-speed='{{ slideshow_speed }}'
	data-delay='{{ slideshow_delay }}'
	data-block-count='{{block_count}}'
>
	<div class='container testimonials_header'>
		{% render 'section-header',
			section_heading: section.settings.section_heading,
			section_subheading: section.settings.subheading,
			section_heading_tag: section.settings.heading_tag,
			dot: section.settings.dot,
			section_heading_size: section.settings.section_heading_size,
			line: section.settings.line
		%}
		{% if block_count > 1 %}
			<div class='testimonials__pagination_block'>
				<div class='swiper-pagination'></div>
				<div class='testimonials__buttons_block swiper-button-{{ section.settings.button_style }}'>
					<div class='swiper-button swiper-button-prev'>
						<span>{% render 'icon-arrow' %}</span>
					</div>
					<div class='swiper-button swiper-button-next'>
						<span>{% render 'icon-arrow' %}</span>
					</div>
				</div>
			</div>
		{% endif %}
	</div>
	<div class='container slider-container'>
		<div class='testimonials__content'>
			<div class='testimonials__swiper swiper'>
				<div class='testimonials__swiper-wrapper swiper-wrapper'>
					{%- for block in section.blocks -%}
						<div
							class='testimonials__slide swiper-slide {% if block_count < 2 %}slide-disable-oneblock{% endif %}'
						>
							<div class='testimonials__slide-wrapper'>
								{% if block.settings.enable_stars %}
									<div class='testimonials__slide-stars_block'>
										<div class='testimonials__slide-stars'>
											{% for i in (1..5) %}
												{% liquid
													if i <= block.settings.rating
														assign active = true
													else
														assign active = false
													endif
												%}
												{% render 'icon-star', star_active: active %}
											{% endfor %}
										</div>
										<span class='testimonials__slide-stars_count'>
											{{ block.settings.rating }}/5</span
										>
									</div>
								{% endif %}
								{% if block.settings.text != blank %}
									<p class='testimonials__slide-review richtext__content h2'>
										{{ block.settings.text }}
									</p>
								{% endif %}
								{% if block.settings.image != blank
									or block.settings.author_name != blank
									or block.settings.position_name != blank
								%}
									<div class='testimonials__slide-info_box'>
										{%- if block.settings.image != blank -%}
											<div class='testimonials__slide-info_progress'>
												<div class='testimonials__slide-info_img'>
													{%- assign widths = '360, 535, 720, 940, 1070, 1200, 1500, 1780, 2000, 2400, 2800, 3200' -%}
													{%- capture sizes -%}
														(min-width: 1100px) calc((100vw - 128px)), calc((100vw - 40px))
														{%- endcapture -%}
													{{
														block.settings.image
														| image_url: width: block.settings.image.width
														| image_tag:
															loading: 'lazy',
															sizes: sizes,
															widths: widths
													}}
												</div>
												<div class='testimonials__slide-info_spinner'>
													<svg>
														<circle id='shape' cx='29' cy='29' r='28' stroke-dasharray='195' stroke-linecap="round"/>
														 <circle id='shape1' cx='29' cy='29' r='28' stroke-dasharray='195'/>
													</svg>
												</div>
											</div>
										{% else %}
											<div class='testimonials__slide-info_progress'>
												<div class='testimonials__slide-info_img'>
													{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
												</div>

												<div class='testimonials__slide-info_spinner'>
													<svg>
														<circle id='shape' cx='29' cy='29' r='28' stroke-dasharray='195' stroke-linecap="round"/>
														 <circle id='shape1' cx='29' cy='29' r='28' stroke-dasharray='195'/>
													</svg>
												</div>
											</div>
										{%- endif -%}
										<div class='testimonials__slide-info'>
											{% if block.settings.author_name != blank %}
												<span class='testimonials__slide-author font-weight-medium'>
													{{ block.settings.author_name }}
												</span>
											{% endif %}
											{% if block.settings.position_name != blank %}
												<span class='testimonials__slide-position'>
													{{ block.settings.position_name }}
												</span>
											{% endif %}
										</div>
									</div>
								{% endif %}
							</div>
						</div>
					{%- endfor -%}
				</div>
			</div>
		</div>
	</div>
</div>

