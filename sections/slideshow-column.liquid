{{ 'section-slideshow-column.css' | asset_url | stylesheet_tag }}
<script
	src="{{ 'slideshow-column.js' | asset_url }}"
	defer="defer"
></script>
{% style %}
{% render 'section-margin' %}
{% endstyle %}
{% liquid
	assign slide_effects = section.settings.slide_effects
	assign slideshow_speed = section.settings.slideshow_speed
	assign autoplay = section.settings.is_autoplay
	assign stop_autoplay = section.settings.is_hover_stop_autoplay
	assign slideshow_delay = section.settings.slideshow_delay
	assign image_size = section.settings.image_size
	assign image_size_mobile = section.settings.image_size_mobile

	case image_size
		when 'adapt'
			assign section_size = 0
			assign slide_class = image_size
		when '1/1'
			assign section_size = '100%'
			assign slide_class = image_size
		when '3/2'
		assign section_size = '60%'
			assign slide_class = image_size
		when '4/3'
		assign section_size = '75%'
			assign slide_class = image_size
		when '3/4'
		assign section_size = '130%'
			assign slide_class = image_size		
		when '16/9'
		assign section_size = '56%'
			assign slide_class = image_size
		when '21/9'
		assign section_size = '42.8%'
			assign slide_class = image_size
		when 'full'
			assign section_size = '100vh'
			assign slide_class = image_size
		else
			assign section_size = 'calc(100vh - var(--header-height) - var(--announcement-height))'
			assign slide_class = image_size
	endcase

	case image_size_mobile
		when 'adapt'
			assign mobile_section_size = 0
		when '1/1'
			assign mobile_section_size = '100%'
		when '3/2'
			assign mobile_section_size = '60%'
		when '3/4'
			assign mobile_section_size = '130%'
		when '4/3'
			assign mobile_section_size = '75%'
		when '16/9'
			assign mobile_section_size = '56%'
		when '21/9'
			assign mobile_section_size = '42.8%'
		when 'full'
			assign mobile_section_size = 'calc(100vh - var(--announcement-height))'
		else
			assign mobile_section_size = 'calc(100vh - var(--header-height) - var(--announcement-height))'
	endcase
%}

<div
	class="slideshow-column {{ slide_class }}"
	data-id="shopify-section-{{ section.id }}"
	data-autoplay="{{ autoplay }}"
	data-stop-autoplay="{{ stop_autoplay }}"
	data-speed="{{ slideshow_speed }}"
	data-delay="{{ slideshow_delay }}"
	data-effect="{{ slide_effects }}"
	style="--bullet-duration : {{ slideshow_delay }}s"
>	
	{% if section.settings.section_layout == "container" %}
		<div class="container">
	{% endif %}
		<div class="slideshow-column__wrapper">
			<div class="slideshow-column__text-slider">
				<div class="slideshow-column__text-swiper swiper">
					<div class="swiper-wrapper">
						{% for block in section.blocks %}
							{% liquid
								assign image_height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio
								assign adapt_height = 1 | divided_by: block.settings.image.aspect_ratio | times: 100 | append: '%'
								assign adapt_height_left = 1 | divided_by: block.settings.image.aspect_ratio | times: 100 | append: '%'
								assign slide_color = block.settings.color_scheme
								if image_size == 'adapt'
									assign section_size = adapt_height
								endif

								if image_size_mobile == 'adapt'
									assign mobile_section_size = adapt_height_left
								endif
							%}
							{% style %}
								[data-id="slideshow-column-{{ block.id }}"] {
									--slide-height: {{ section_size }};
									--mobile-height: {{ mobile_section_size }};
									{% if block.settings.overlay_enable %}
					       		--opacity-overlay:{{ block.settings.overlay_opacity }};
									{% else %}
										--opacity-overlay: 0;
									{% endif %}
								}
							{% endstyle %}
							<div class="slideshow-column__text-slide swiper-slide background color-{{ slide_color }}" data-color-scheme="color-{{ slide_color }}" data-id="slideshow-column-{{ block.id }}">
								{% if block.settings.image != blank %}
									{{
										block.settings.image
										| image_url: width: 3840
										| image_tag:
											loading: 'lazy',
											width: block.settings.image.width,
											height: image_height,
											sizes: '100vw,(min-width: 990px) 50vw',
											widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
									}}
								{% endif %}
								<div class="slideshow-column__text-slider__wrapper {% if section.settings.text_alignment == 'left' %}text-left{% endif %}
								{% if block.settings.image != blank %} slideshow-column__text-slider__wrapper_image {% endif %}">
									<div class="container">
										{% if block.settings.heading != blank %}
											{% assign heading_tag = section.settings.heading_tag %}
											<{{ heading_tag }}
												class="slideshow-column-slide__title">
												{{ block.settings.heading }}
											</{{ heading_tag }}>
										{% endif %}
										{% if block.settings.text != blank %}
											<div
												class="slideshow-column-slide__desc richtext__content">
												{{ block.settings.text }}			
											</div>
										{% endif %}
									</div>
								</div>
								{% if block.settings.overlay_enable %}
									<span class='slideshow-column__overlay'></span>
								{% endif %}
							</div>
						{% endfor %}
					</div>
						<div class="slideshow-column-bottom">
							<div class="container {% if section.settings.text_alignment == 'left' %}bullets-left{% endif %}">
								<div class="swiper-pagination__wrapper">
									<div class="swiper-pagination swiper-pagination__button {% if section.settings.is_autoplay == false %}not-autoplay{% else %}bullet-autoplay{% endif %}"></div>
								</div>
							</div>
						</div>
				</div>
			</div>
			<div class="slideshow-column__image-slider {{ slide_effects }}">
				<div class="slideshow-column__image-swiper swiper">
					<div class="swiper-wrapper">
						{% for block in section.blocks %}
							{% liquid
								assign image_height = block.settings.image_second.width | divided_by: block.settings.image_second.aspect_ratio
								assign adapt_height = 1 | divided_by: block.settings.image.aspect_ratio | times: 100 | append: '%'
								assign adapt_height_right = 1 | divided_by: block.settings.image_second.aspect_ratio | times: 100 | append: '%'
								assign slide_color = block.settings.color_scheme

								if image_size == 'adapt'
									if block.settings.image == blank 
									 assign section_size = adapt_height_right
									else 
									 assign section_size = adapt_height
									endif
								endif

								if image_size_mobile == 'adapt'
									assign mobile_section_size = adapt_height_right
								endif
							%}
				
							{% style %}
								[data-id="slideshow-column-{{ block.id }}"] .slideshow-column__image-slider__box {
										--slide-height : {{ section_size }};
										--mobile-height: {{ mobile_section_size }};
								}
							{% endstyle %}
						<div class="swiper-slide color-{{slide_color}}" data-id="slideshow-column-{{ block.id }}" data-color-scheme="color-{{ slide_color }}">
							<div class="slideshow-column__image-slider__box">
								{% if block.settings.video != blank %}
									{{
										block.settings.video
										| video_tag:
										image_size: '1100x',
										autoplay: true,
										loop: true,
										controls: false,
										muted: true
										}}
								{% elsif block.settings.image_second != blank %}
									{{
										block.settings.image_second
										| image_url: width: 3840
										| image_tag:
											loading: 'lazy',
											width: block.settings.image_second.width,
											height: image_height,
											sizes: '100vw,(min-width: 990px) 50vw',
											widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
									}}
								{% else %}
								{% assign index = forloop.index | modulo: 3 | plus: 1 %} 
									{{ 'hero-apparel-' | append: index | placeholder_svg_tag: 'placeholder-svg' }} 
								{% endif %}
							</div>
								<div class="slideshow-column__button_box">
									{% render 'button',
										btn_label: block.settings.button_label,
										btn_link: block.settings.button_link,
										btn_style: block.settings.button_style,
										button_dot: block.settings.button_dot,
									%}
								</div>
						</div>
					{% endfor %}
					</div>
				</div>
			</div>
		</div>
	{% if section.settings.section_layout == "container" %}
		</div>
	{% endif %}
</div>
	
