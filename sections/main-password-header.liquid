<div class="header-wrapper color-{{ section.settings.color_scheme }} background">
  <div class="password-header container">
    {% render 'header-logo' %}

    {%- if shop.password_message != blank -%}
      <div class="password-content">
        {{ shop.password_message }}
      </div>
    {%- endif -%}

    <details class="password-modal modal">
      <summary
        class="modal__toggle focus-inset"
        aria-haspopup="dialog"
        aria-label="{{ 'general.password_page.modal' | t }}"
      >
        <div class="modal__toggle-open password-link link underlined-link">
          {% render 'icon-padlock' %}
          {{ 'general.password_page.login_password_button' | t }}
        </div>
        <div
          class="modal__toggle-close"
          aria-hidden="true"
        >
          {% render 'icon-close' %}
        </div>
      </summary>
      <div
        class="modal__content"
        role="dialog"
        aria-labelledby="DialogHeading"
        aria-modal="true"
      >
        <div class="password-modal__content" tabindex="-1">
          <button
            type="button"
            class="modal__close-button link modal-close-button focus-inset"
            aria-label="{{ 'accessibility.close' | t }}"
          >
            {% render 'icon-close' %}
          </button>
          <h2 class="password-modal__content-heading" id="DialogHeading">
            {{ 'general.password_page.login_form_heading' | t }}
          </h2>
          {%- form 'storefront_password', class: 'password-form' -%}
            <div class="password-modal__wrapper">
              <div class="password-field field{% if form.errors %} password-field--error{% endif %}">
                <input
                  dir="ltr"
                  type="password"
                  name="password"
                  id="Password"
                  class="field__input"
                  autocomplete="current-password"
                  {% if form.errors %}
                    aria-invalid="true"
                    aria-describedby="PasswordLoginForm-password-error"
                  {%- endif -%}
                  placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}"
                >
                <label class="field__label" for="Password">
                  {{ 'general.password_page.login_form_password_placeholder' | t }}
                </label>
              </div>
              {%- if form.errors -%}
                <div id="PasswordLoginForm-password-error" role="status">
                  <span class="visually-hidden">
                    {{- 'accessibility.error' | t -}}
                  </span>
                  <span class="form__message">
                    {{- 'general.password_page.login_form_error' | t -}}
                  </span>
                </div>
              {%- endif -%}
            </div>
            <button
              name="commit"
              class="password-button button button--primary button--primary-size focus-inset"
              data-button-text="{{ 'general.password_page.login_form_submit' | t }}"
            >
              <span>{{ 'general.password_page.login_form_submit' | t }}</span>
            </button>
          {%- endform -%}
          <small class="password__footer-text">
            {{- 'general.password_page.admin_link_html' | t -}}
          </small>
        </div>
      </div>
    </details>
  </div>
</div>
{%- if section.settings.color_scheme == 'background-1' -%}<hr>{%- endif -%}

{% schema %}
{
  "name": "t:sections.main-password-header.name",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.header.settings.logo.label"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 350,
      "step": 5,
      "default": 90,
      "unit": "t:sections.header.settings.logo_width.unit",
      "label": "t:sections.header.settings.logo_width.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "background-1",
      "label": "t:sections.main-password-header.settings.color_scheme.label"
    }
  ]
}
{% endschema %}

