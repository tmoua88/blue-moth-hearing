                          <span class="visually-hidden">
                            {{- 'general.social.links.vimeo' | t -}}
                          </span>
                        </a>
                      </li>
                    {%- endif -%}
                  </ul>
              {% endcase %}
            {% endfor %}
          </div>
          <button
            type="button"
            class="link modal-close-button popup-close focus-inset"
            aria-label="{{ 'accessibility.close' | t }}"
          >
            {% render 'icon-close' %}
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
{% if section.settings.show_overlay %}
  <div class="popup-overlay"></div>
{% endif %}

