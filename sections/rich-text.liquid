{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  {% render 'section-margin' %}
  {% render 'section-header' %}
{%- endstyle -%}

<div class="rich-text container">
  <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.section_layout }} {% if section.settings.section_layout == 'row' %}{% unless section.settings.subheading != blank or section.settings.heading != blank %}rich-text__text-only{% endunless %}{% endif %}">
    {% if section.settings.subheading != blank or section.settings.heading != blank %}
      <div class="rich-text__title">
        {% if section.settings.subheading != blank %}
          <div class="rich-text__subheading {% if section.settings.dot %}rich-text__subheading_dot{% endif %} subheading {% if section.settings.heading == blank %}margin-none{% endif %}">
            {{ section.settings.subheading | escape }}
          </div>
        {% endif %}
        {% if section.settings.heading != blank %}
          {% assign section_heading_tag = section.settings.section_heading_tag %}
          <{{ section_heading_tag }} class="rich-text__heading {{ section.settings.heading_size }} {% if section.settings.subheading == blank %}margin-none{% endif %}">
            {{ section.settings.heading }}
          </{{ section_heading_tag }}>
        {% endif %}
      </div>
    {% endif %}
    {% if section.settings.text != blank %}
      <div class="rich-text__text {% if section.settings.section_layout == 'row' %}{% unless section.settings.subheading != blank or section.settings.heading != blank %}rich-text__text-padding-margin-0{% endunless %}{% endif %}">
        {{ section.settings.text }}
      </div>
    {% endif %}
    {% if section.settings.button_label != blank %}
      <div class="rich-text__button-container">
        {% render 'button',
          btn_label: section.settings.button_label,
          btn_link: section.settings.button_link,
          btn_style: section.settings.button_style,
          button_dot: section.settings.button_dot,
          add_classes: 'rich-text__button focus-inset'
        %}
        {% if section.settings.button_label_2 != blank %}
          <div class="image-with-text__button">
            {% render 'button',
              btn_label: section.settings.button_label_2,
              btn_link: section.settings.button_link_2,
              btn_style: section.settings.button_style_2,
              button_dot: section.settings.button_dot_2,
              add_classes: 'rich-text__button focus-inset'
            %}
          </div>
        {%- endif -%}
        {% if section.settings.button_label_3 != blank %}
          <div class="image-with-text__button">
            {% render 'button',
              btn_label: section.settings.button_label_3,
              btn_link: section.settings.button_link_3,
              btn_style: section.settings.button_style_3,
              button_dot: section.settings.button_dot_3,
              add_classes: 'rich-text__button focus-inset'
            %}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>

