{{ 'section-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
	{% render 'section-margin' %}
{%- endstyle -%}

{% liquid
	assign color_scheme = section.settings.color_scheme
	assign image_position = section.settings.image_position
	assign image_size = section.settings.image_size
	assign content_alignment = section.settings.content_alignment
%}

<div class='image-with-text {% if image_position == 'image_center' %} color-{{ color_scheme }} image-centered-layout {%- else -%} image-standard-layout {% endif %}'>
	<div
		class='container'
	>
		<div class='image-with-text__wrapper '>
			{% if image_position == 'image_center' %}
				{% if image_size != 'adapt' %}
					{% style %}
						#shopify-section-{{ section.id }} .image-with-text__media {
						  aspect-ratio: {{ image_size }};
						}
					{% endstyle %}
				{% endif %}
				<div class='image-with-text__centered  {% if image_size == 'adapt' %} centered-adapt {% endif %}'>
					<div class='image-with-text__content image-with-text__content--{{ content_alignment }}'>
						{% render 'section-header',
							section_heading: section.settings.heading,
							section_subheading: section.settings.subheading,
							dot: section.settings.dot,
							section_heading_size: section.settings.heading_size,
							section_heading_tag: section.settings.section_heading_tag,
							line: section.settings.line
						%}

						{% if section.settings.text != blank %}
							<div class='image-with-text__text richtext__content'>
								{{ section.settings.text }}
							</div>
						{% endif %}
					</div>

					<div class='image-with-text__media {{ image_size }}'>
						{%- if section.settings.image != blank -%}
							{%- if image_position == 'image_top'
								or image_position == 'image_bottom'
							-%}
								{%- assign widths = '360, 535, 720, 940, 1070, 1200, 1500, 1780, 2000' -%}
								{%- capture sizes -%}
									(min-width: 1100px) calc((100vw - 126px)), calc((100vw - 40px))
								{%- endcapture -%}
							{%- else -%}
								{%- capture sizes -%}
									(min-width: 1100px) calc((50vw - 64px)), calc((100vw - 40px))
								{%- endcapture -%}
								{%- assign widths = '360, 535, 720, 940, 1070, 1200, 1400, 1600' -%}
							{%- endif -%}
							{{
								section.settings.image
								| image_url: width: section.settings.image.width
								| image_tag: loading: 'lazy', sizes: sizes, widths: widths
							}}
						{%- else -%}
							{{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
						{%- endif -%}
					</div>

					{% if section.settings.button_label != blank %}
						<div class='button-container image-with-text__button-container--{{ content_alignment }}'>
							{% render 'button',
								btn_label: section.settings.button_label,
								btn_link: section.settings.button_link,
								btn_style: section.settings.button_style,
								button_dot: section.settings.button_dot,
								add_classes: 'image-with-text__button focus-inset'
							%}
						</div>
					{%- endif -%}
				</div>
			{%- elsif image_position != 'image_center' -%}
				<div class='image-with-text__grid image-with-text__grid--{{ image_position }}'>
					{% if image_size != 'adapt' %}
						{% style %}
							#shopify-section-{{ section.id }} .image-with-text__media {
							  aspect-ratio: {{ image_size }};
							}
						{% endstyle %}
					{% endif %}
					<div class='image-with-text__media {{ image_size }}'>
						{%- if section.settings.image != blank -%}
							{%- if image_position == 'image_top'
								or image_position == 'image_bottom'
							-%}
								{%- assign widths = '360, 535, 720, 940, 1070, 1200, 1500, 1780, 2000' -%}
								{%- capture sizes -%}
									(min-width: 1100px) calc((100vw - 126px)), calc((100vw - 40px))
								{%- endcapture -%}
							{%- else -%}
								{%- capture sizes -%}
									(min-width: 1100px) calc((50vw - 64px)), calc((100vw - 40px))
								{%- endcapture -%}
								{%- assign widths = '360, 535, 720, 940, 1070, 1200, 1400, 1600' -%}
							{%- endif -%}
							{{
								section.settings.image
								| image_url: width: section.settings.image.width
								| image_tag: loading: 'lazy', sizes: sizes, widths: widths
							}}
						{%- else -%}
							{{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
						{%- endif -%}
					</div>
					<div class='image-with-text__content color-{{ color_scheme }} image-with-text__content--{{ content_alignment }} image-with-text__content--{{ image_position }}'>
						{% render 'section-header',
							section_heading: section.settings.heading,
							section_subheading: section.settings.subheading,
							dot: section.settings.dot,
							section_heading_size: section.settings.heading_size,
							section_heading_tag: section.settings.section_heading_tag,
							line: section.settings.line
						%}

						{% if section.settings.text != blank %}
							<div class='image-with-text__text richtext__content'>
								{{ section.settings.text }}
							</div>
						{% endif %}

						{% if section.settings.button_label != blank %}
							<div class="image-with-text__button-wrapper">
												{% render 'button',
								btn_label: section.settings.button_label,
								btn_link: section.settings.button_link,
								btn_style: section.settings.button_style,
								button_dot: section.settings.button_dot,
								add_classes: 'image-with-text__button focus-inset'
							%}
							</div>
			
						{%- endif -%}
					</div>
				</div>
			{% endif %}
		</div>
	</div>
</div>

