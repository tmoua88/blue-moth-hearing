{% comment %}{ /* Mobile (default) */{% endcomment %} #shopify-section-
{{- section.id }}
{
{% if section.settings.margin_top == 'no-indent' %}
	padding-top: 0;
{% elsif section.settings.margin_top == 'xl' %}
	padding-top: 10rem;
{% elsif section.settings.margin_top == 'l' %}
	padding-top: 7rem;
{% elsif section.settings.margin_top == 'm' %}
	padding-top: 6.4rem;
{% elsif section.settings.margin_top == 's' %}
	padding-top: 4rem;
{% else %}
	padding-top: 3.2rem;
{% endif %}

{% if section.settings.margin_bottom == 'no-indent' %}
	padding-bottom: 0;
{% elsif section.settings.margin_bottom == 'xl' %}
	padding-bottom: 10rem;
{% elsif section.settings.margin_bottom == 'l' %}
	padding-bottom: 7rem;
{% elsif section.settings.margin_bottom == 'm' %}
	padding-bottom: 6.4rem;
{% elsif section.settings.margin_bottom == 's' %}
	padding-bottom: 4rem;
{% else %}
	padding-bottom: 3.2rem;
{% endif %}
}

{% comment %}Tablet/Medium screens (750px - 1099px) {% endcomment %}
@media screen and (min-width: 750px) { #shopify-section-{{ section.id }} {
{% if section.settings.margin_top == 'no-indent' %}
	padding-top: 0;
{% elsif section.settings.margin_top == 'xl' %}
	padding-top: 12rem;
{% elsif section.settings.margin_top == 'l' %}
	padding-top: 8.5rem;
{% elsif section.settings.margin_top == 'm' %}
	padding-top: 6.7rem;
{% elsif section.settings.margin_top == 's' %}
	padding-top: 4.4rem;
{% else %}
	padding-top: 3.6rem;
{% endif %}

{% if section.settings.margin_bottom == 'no-indent' %}
	padding-bottom: 0;
{% elsif section.settings.margin_bottom == 'xl' %}
	padding-bottom: 12rem;
{% elsif section.settings.margin_bottom == 'l' %}
	padding-bottom: 8.5rem;
{% elsif section.settings.margin_bottom == 'm' %}
	padding-bottom: 6.7rem;
{% elsif section.settings.margin_bottom == 's' %}
	padding-bottom: 4.4rem;
{% else %}
	padding-bottom: 3.6rem;
{% endif %}
} }

{% comment %}/* Large screens (1100px - 1359px) */{% endcomment %}
@media screen and (min-width: 1100px) and (max-width: 1359px) {
#shopify-section-{{ section.id }} {
{% if section.settings.margin_top == 'no-indent' %}
	padding-top: 0;
{% elsif section.settings.margin_top == 'xl' %}
	padding-top: 13.5rem;
{% elsif section.settings.margin_top == 'l' %}
	padding-top: 9.25rem;
{% elsif section.settings.margin_top == 'm' %}
	padding-top: 6.85rem;
{% elsif section.settings.margin_top == 's' %}
	padding-top: 4.6rem;
{% else %}
	padding-top: 3.8rem;
{% endif %}

{% if section.settings.margin_bottom == 'no-indent' %}
	padding-bottom: 0;
{% elsif section.settings.margin_bottom == 'xl' %}
	padding-bottom: 13.5rem;
{% elsif section.settings.margin_bottom == 'l' %}
	padding-bottom: 9.25rem;
{% elsif section.settings.margin_bottom == 'm' %}
	padding-bottom: 6.85rem;
{% elsif section.settings.margin_bottom == 's' %}
	padding-bottom: 4.6rem;
{% else %}
	padding-bottom: 3.8rem;
{% endif %}
} }

{% comment %}/* Extra large screens (1360px+) */ {% endcomment %}
@media screen and (min-width: 1360px) { #shopify-section-{{ section.id }} {
{% if section.settings.margin_top == 'no-indent' %}
	padding-top: 0;
{% elsif section.settings.margin_top == 'xl' %}
	padding-top: 15rem;
{% elsif section.settings.margin_top == 'l' %}
	padding-top: 10rem;
{% elsif section.settings.margin_top == 'm' %}
	padding-top: 7rem;
{% elsif section.settings.margin_top == 's' %}
	padding-top: 4.8rem;
{% else %}
	padding-top: 4rem;
{% endif %}

{% if section.settings.margin_bottom == 'no-indent' %}
	padding-bottom: 0;
{% elsif section.settings.margin_bottom == 'xl' %}
	padding-bottom: 15rem;
{% elsif section.settings.margin_bottom == 'l' %}
	padding-bottom: 10rem;
{% elsif section.settings.margin_bottom == 'm' %}
	padding-bottom: 7rem;
{% elsif section.settings.margin_bottom == 's' %}
	padding-bottom: 4.8rem;
{% else %}
	padding-bottom: 4rem;
{% endif %}
} }
